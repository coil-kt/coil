{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "automerge": false,
    "dependencyDashboard": false,
    "packageRules": [
        {
            // Ignore Gradle updates as they cause the Renovate update job to OOM.
            "matchPackageNames": ["gradle-wrapper"],
            "matchManagers": ["gradle"],
            "enabled": false
        }
    ]
}
